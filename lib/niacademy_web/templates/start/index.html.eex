<div class="start-container">
  <div id="tracked-stats" class="tracked-stats">
    <%= format_time @tutorial_draw_time, "tutorial-time" %>
    <span>/</span>
    <%= format_time @free_draw_time, "free-time" %>
  </div>
  <%= format_project_type @project_type %>
  <div class="links">
    <div class="link-start"><%= link "START", to: Routes.activity_path(@conn, :create_from_preset, preset_id: @preset_id, type: @project_type), method: :post, class: link_class(@project_type) %></div>
    <div class="link-custom"><%= link "Custom...", to: Routes.start_session_path(@conn, :index) %></div>
    <div class="current-preset">Preset: <%= @preset["humanName"] %></div>
  </div>
</div>
<script>
  let stats = document.getElementById("tracked-stats");
  stats.style["background-size"] = <%= "\"#{@draw_time_percentage}% 100%\"" |> raw() %>;
</script>
