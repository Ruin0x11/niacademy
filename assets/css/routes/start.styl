$tutorial-color = #f0ad4e;
$free-color = #5cb85c;
$padding = 30px;

.tutorial-type
  color: $tutorial-color;
.free-type
  color: $free-color;

.tutorial-link
  color: transparentify($tutorial-color, #fff, 0.8);
  &:hover
    color: transparentify($tutorial-color, #fff, 0.6);
.free-link
  color: transparentify($free-color, #fff, 0.8);
  &:hover
    color: transparentify($free-color, #fff, 0.6);

.start-container
    padding: $padding;
    width: 100%;
    height: 100%;

    .tracked-stats, .project-type
        border-radius: 6px;
        padding: .5rem;
        background-color: rgb(31, 32, 32);
        border: 1px solid rgb(100, 95, 87);
        font-weight: bolder;

    .tracked-stats
        position: absolute;
        font-size: 40px;
        @media (max-width: 1200px)
          font-size: 38px;
        @media (max-width: 1000px)
          font-size: 34px;
        @media (max-width: 800px)
          font-size: 28px;
        @media (max-width: 400px)
          font-size: 16px;
        .tutorial-time
            color: $tutorial-color;
            .minutes
               color: transparentify($tutorial-color, #fff, 0.8);
            .hours
               color: transparentify($tutorial-color, #fff, 0.6);
        .free-time
            color: $free-color;
            .minutes
               color: transparentify($free-color, #fff, 0.8);
            .hours
               color: transparentify($free-color, #fff, 0.6);

    .project-type
        position: absolute;
        font-size: 15px;
        right: $padding;

    .links
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        flex-direction: column;
        margin: auto;
        width: 100%;
        height: 100%;

        .link-start
          font-size: 150px;
          @media (max-width: 1200px)
            font-size: 140px;
          @media (max-width: 1000px)
            font-size: 120px;
          @media (max-width: 800px)
            font-size: 80px;
          @media (max-width: 400px)
            font-size: 50px;
        .link-custom
          font-size: 45px;
          @media (max-width: 1200px)
            font-size: 40px;
          @media (max-width: 1000px)
            font-size: 30px;
          @media (max-width: 800px)
            font-size: 25px;
          @media (max-width: 400px)
            font-size: 20px;
        .current-preset
          font-size: 24px;
          margin-top: 1.8rem;
          @media (max-width: 1200px)
            margin-top: 1.7rem;
            font-size: 21px;
          @media (max-width: 1000px)
            margin-top: 1.6rem;
            font-size: 17px;
          @media (max-width: 800px)
            margin-top: 1.4rem;
            font-size: 15px;
          @media (max-width: 400px)
            margin-top: 1.2rem;
            font-size: 12px;
