$bar-height = 15vh;

.activity-container
   .info
       font-size: 40pt;
       width: auto;
       margin: 0 0.1em;
       @media (max-height: 1024px)
         font-size: 35pt;
       @media (max-height: 800px)
         font-size: 28pt;
       @media (max-height: 700px)
         font-size: 26pt;
       @media (max-height: 500px)
         font-size: 22pt;
       @media (max-height: 300px)
         font-size: 18pt;
       .position
           padding-right: 0.2em;
           .position-current
               color: #DDDDDD;
           .position-total
               color: #888888;

   #content
      display: block;
      position: relative;
      height: (100vh - $bar-height);
      overflow: auto;

      .image-single
        .image-content
          padding: 2em;
          position: absolute;
          left: 0;
          top: 0;
          right: 0;
          bottom: 0;
          margin: auto;
          max-height: 100%;
          max-width: 100%;
          width: auto;
          height: auto;

      .image-grid
        line-height: 0;
        -webkit-column-count: 5;
        -webkit-column-gap:   0px;
        -moz-column-count:    5;
        -moz-column-gap:      0px;
        column-count:         5;
        column-gap:           0px;
        @media (max-width: 1200px)
          -moz-column-count:    4;
          -webkit-column-count: 4;
          column-count:         4;
        @media (max-width: 1000px)
          -moz-column-count:    3;
          -webkit-column-count: 3;
          column-count:         3;
        @media (max-width: 800px)
          -moz-column-count:    2;
          -webkit-column-count: 2;
          column-count:         2;
        @media (max-width: 400px)
          -moz-column-count:    1;
          -webkit-column-count: 1;
          column-count:         1;
        .image-content
          width: 100% !important;
          height: auto !important;

      .text-container
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        flex-direction: column;
        margin: auto;
        width: 100%;
        height: 100%;
        .text-content
          font-size: 80px;
          @media (max-width: 1200px)
            font-size: 70px;
          @media (max-width: 1000px)
            font-size: 55px;
          @media (max-width: 800px)
            font-size: 40px;;
          @media (max-width: 400px)
            font-size: 20px;

   #exit-bar
      text-align: center;
      position: absolute;
      top: 0;
      right: 0;
      height: 5rem;
      min-height: 5rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 100%;
      min-height: 15vh;
      .exit-button
          background: rgb(40, 44, 47);
          color: rgba(255, 255, 255, 0.44);
          margin: 1em;
          position: absolute;
          top: 0;
          right: 0;
          padding: 0;
          height: 6.0rem;
          width: 6.0rem;
          &:hover
            background-color: rgb(60, 66, 72);
            color: rgba(255, 255, 255, 0.66);

   #bottom-bar
      background: #111111;
      width: 100%;
      text-align: center;
      position: relative;
      top: 0;
      left: 0;
      height: $bar-height;
      min-height: $bar-height;
      display: flex;
      flex-direction: column;
      justify-content: center;
      border-top: 2px solid #444;

      .bar-container
          display: flex;
          margin: auto;
      .control-bar
          margin: 1em;
          position: absolute;
          right: 0;
          button
            margin: 0 0.2rem;
            height: 5rem;
            padding: 1.5rem;

      .progress-bar
         top: 0;
         width: 100%
         color: #28a745;
         position: absolute;
         height: .5em;
         background: transparent;
         border: 0;
         -moz-transition: all 4s ease;
         -moz-transition-delay: 1s;
         -webkit-transition: all 4s ease;
         -webkit-transition-delay: 1s;
         transition: all 4s ease;
         transition-delay: 1s;
         &::-moz-progress-bar
             background: #28a745;
         &::-webkit-progress-value
             background: #28a745;


.activity-finished-container
  padding: 2rem;
