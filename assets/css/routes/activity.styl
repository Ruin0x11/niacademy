$bar-height = 15%

.route-activity
   .info
       font-size: 28pt;
       width: auto;
       .position
           padding-right: 0.2em;
           color: #888888

   #content
      display: block;
      position: relative;
      max-height: (100vh - $bar-height);
      max-width: 100%
      width: auto;
      height: auto
      .main
         .image-content
            margin: 0 auto;


   #bottom-bar
      width: 100%;
      text-align: center;
      position: relative;
      top: 0;
      left: 0;
      height: $bar-height;
      min-height: $bar-height;
      .main
         .image-content
            max-height: 100%;
            max-width: 100%;
