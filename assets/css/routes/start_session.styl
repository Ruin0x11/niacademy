.start-session-container
    padding: 40px;
    .info-container
        .regimens
            margin-left: 20px;
            width: 50%;

            form
              margin-bottom: 0;
              .button-container
                .submit-button
                   margin-right: 20px;
                .add-button
                   border-color: darken(rgb(63, 140, 35), 10%);
                   background-color: rgb(63, 140, 35);
              .regimen-container
                display: flex;
                flex-direction: row;
                .regimen-form
                    background-color: rgb(30, 32, 33);
                    border-color: rgb(56, 61, 63);
                    padding: 19px;
                    margin-bottom: 20px;
                    margin-right: 10px;
                    background-color: #f5f5f5;
                    border: 1px solid #e3e3e3;
                    border-radius: 4px;
                .delete-button
                    border-color: darken(#d9534f, 10%);
                    background-color: #d9534f;

.full-width
    width: 100%;
